<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↑"
        android:id="@+id/button_forward"
        android:textSize="40dp"
        android:layout_below="@+id/text_humidity"
        android:layout_alignLeft="@+id/button_back"
        android:layout_alignStart="@+id/button_back"
        android:layout_marginTop="96dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↓"
        android:id="@+id/button_back"
        android:layout_marginTop="82dp"
        android:textSize="40dp"
        android:layout_below="@+id/button_left"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/button_left"
        android:layout_marginTop="77dp"
        android:textSize="40dp"
        android:layout_below="@+id/button_forward"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="→"
        android:id="@+id/button_right"
        android:layout_above="@+id/button_back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/button_stop"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button_left"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000"
        android:id="@+id/text_temperature"
        android:textSize="30dp"
        android:layout_below="@+id/button_get"
        android:layout_alignLeft="@+id/button_stop"
        android:layout_alignStart="@+id/button_stop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000"
        android:id="@+id/text_humidity"
        android:textSize="30dp"
        android:layout_below="@+id/text_temperature"
        android:layout_alignLeft="@+id/text_temperature"
        android:layout_alignStart="@+id/text_temperature" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Temperature and Humidity"
        android:id="@+id/button_get"
        android:textSize="30dp"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button_reset"
        android:textSize="30dp"
        android:layout_below="@+id/button_back"
        android:layout_alignLeft="@+id/text_humidity"
        android:layout_alignStart="@+id/text_humidity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature = "
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_above="@+id/text_humidity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humid            = "
        android:id="@+id/textView2"
        android:layout_below="@+id/text_temperature"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />
</RelativeLayout>
